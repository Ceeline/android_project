<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailDetail">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/NameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="273dp"
            android:layout_marginBottom="630dp"
            android:text="@string/cocktail_name" />

        <ImageView
            android:id="@+id/cocktail_Img"
            android:layout_width="156dp"
            android:layout_height="163dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="507dp"
            android:contentDescription="@string/cocktail_descriptionImg"
            android:src="@drawable/cocktail_img_default" />

        <TextView
            android:id="@+id/ingredients_Txt"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="363dp"
            android:text="@string/cocktail_ingredient" />

        <TextView
            android:id="@+id/instructionsTxt"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="172dp"
            android:text="@string/cocktail_instruction" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>