    package="mobile_dev.project.android_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cocktail_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cocktail_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".search_Activity"/>
        <activity android:name=".Basic_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".addNewIngredients_Activity" />
        <activity android:name=".frag_Cocktail.CocktailDetail" />
        <activity android:name=".editIngredients_Activity" />
        <activity android:name=".Favoris_Activity" />
    </application>

</manifest>